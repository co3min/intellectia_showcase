<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %> - e-Learning Platform</title>

    <link
      rel="icon"
      href="/assets/img/intellectia_AxQ_icon.ico"
      type="image/x-icon"
    />

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css"
    />
    <link href="/css/styles.css" rel="stylesheet" />
  </head>
  <body id="page-top">
    <nav
      id="mainNav"
      class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top"
    >
      <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="#">
          <img
            src="/assets/img/intellectia.jpg"
            alt="<%= platformName %>"
            class="logo-img me-2"
          />
          <span class="fw-bold text-primary"><%= platformName %></span>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="#about">Despre</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#for-teachers">Profesori</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#for-students">Studenți</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#testimonials">Recenzii</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link btn btn-primary text-white ms-2"
                href="#contact"
                >Contact</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <header class="masthead bg-primary text-white text-center py-5">
      <div class="container">
        <h1 class="display-4 fw-bold mb-3 mt-5"><%= slogan %></h1>
        <p class="lead mb-4"><%= description %></p>
        <a href="#about" class="btn btn-light btn-lg px-4">Află mai multe</a>
      </div>
    </header>

    <section id="about" class="py-5">
      <div class="container text-center">
        <h2 class="fw-bold mb-4">Ce este <%= platformName %>?</h2>
        <p class="text-muted mb-5"><%= aboutText %></p>
        <div class="row g-4">
          <% features.forEach(feature => { %>
          <div class="col-md-4">
            <div class="card border-0 shadow-sm p-4 rounded hover-shadow">
              <i class="<%= feature.icon %> fa-3x text-primary mb-3"></i>
              <h5 class="fw-bold"><%= feature.title %></h5>
              <p class="text-muted"><%= feature.description %></p>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <section id="for-teachers" class="bg-light py-5">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6 mb-4 mb-md-0">
            <h2 class="fw-bold mb-3">Cum funcționează pentru profesori?</h2>
            <p class="text-muted mb-4"><%= teacherDescription %></p>
            <ul class="list-unstyled text-muted">
              <% teacherBenefits.forEach(benefit => { %>
              <li class="mb-2">
                <i class="fas fa-check-circle text-success me-2"></i> <%=
                benefit %>
              </li>
              <% }) %>
            </ul>
          </div>
          <div class="col-md-6 text-center">
            <img
              src="/assets/img/profesor.jpg"
              alt="Teachers Illustration"
              class="img-fluid w-75"
            />
          </div>
        </div>
      </div>
    </section>

    <section id="for-students" class="py-5">
      <div class="container">
        <div class="row align-items-center flex-md-row-reverse">
          <div class="col-md-6 mb-4 mb-md-0">
            <h2 class="fw-bold mb-3">Beneficiile pentru studenți</h2>
            <p class="text-muted mb-4"><%= studentDescription %></p>
            <ul class="list-unstyled text-muted">
              <% studentBenefits.forEach(benefit => { %>
              <li class="mb-2">
                <i class="fas fa-check-circle text-success me-2"></i> <%=
                benefit %>
              </li>
              <% }) %>
            </ul>
          </div>
          <div class="col-md-6 text-center">
            <img
              src="./assets/img/student.jpg"
              alt="Students Illustration"
              class="img-fluid w-75"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Galerie -->
    <section id="gallery" class="py-5 bg-light">
      <div class="container">
        <h2 class="text-center mb-4">Preview</h2>
        <div class="row justify-content-center g-2">
          <div class="col-6 col-md-3 d-flex justify-content-center">
            <a
              href="/assets/img/ecran1.png"
              data-lightbox="intellectia-gallery"
              data-title="Ecran 1"
            >
              <div class="rounded overflow-hidden shadow-sm">
                <img
                  src="/assets/img/ecran1.png"
                  class="img-fluid gallery-thumb-lg"
                  alt="Ecran 1"
                />
              </div>
            </a>
          </div>

          <div class="col-6 col-md-3 d-flex justify-content-center">
            <a
              href="/assets/img/profil_image.png"
              data-lightbox="intellectia-gallery"
              data-title="Profil"
            >
              <div class="rounded overflow-hidden shadow-sm">
                <img
                  src="/assets/img/profil_image.png"
                  class="img-fluid gallery-thumb-lg"
                  alt="Ecran 1"
                />
              </div>
            </a>
          </div>

          <div class="col-6 col-md-3 d-flex justify-content-center">
            <a
              href="/assets/img/my_courses.png"
              data-lightbox="intellectia-gallery"
              data-title="Cursuri"
            >
              <div class="rounded overflow-hidden shadow-sm">
                <img
                  src="/assets/img/my_courses.png"
                  class="img-fluid gallery-thumb-lg"
                  alt="Ecran 1"
                />
              </div>
            </a>
          </div>

          <div class="col-6 col-md-3 d-flex justify-content-center">
            <a
              href="/assets/img/add_course.png"
              data-lightbox="intellectia-gallery"
              data-title="Adaugare Curs"
            >
              <div class="rounded overflow-hidden shadow-sm">
                <img
                  src="/assets/img/add_course.png"
                  class="img-fluid gallery-thumb-lg"
                  alt="Ecran 1"
                />
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>

    <section id="testimonials" class="bg-light py-5">
      <div class="container text-center">
        <h2 class="fw-bold mb-5">
          Cei care au folosit <%= platformName %> spun:
        </h2>
        <div class="row g-4">
          <% testimonials.forEach(review => { %>
          <div class="col-md-4">
            <div class="card border-0 shadow-sm p-4 rounded">
              <p class="text-muted"><%= review.text %></p>
              <strong><%= review.author %></strong>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <section id="contact" class="py-5">
      <div class="container text-center">
        <h2 class="fw-bold mb-4">Ai întrebări? Contactează-ne!</h2>
        <p class="text-muted mb-4"><%= contactText %></p>

        <% if (!thanks) { %>
        <form method="post" action="/contact">
          <div class="row g-3 justify-content-center">
            <div class="col-md-5">
              <input
                type="email"
                name="email"
                class="form-control"
                placeholder="Email-ul tău"
                required
              />
            </div>
            <div class="col-md-5">
              <input
                type="text"
                name="subject"
                class="form-control"
                placeholder="Subiectul mesajului"
                required
              />
            </div>
            <div class="col-md-10">
              <textarea
                name="message"
                class="form-control"
                rows="4"
                placeholder="Mesajul tău..."
              ></textarea>
            </div>
            <div class="col-md-10 mt-3">
              <button type="submit" class="btn btn-primary btn-lg w-100">
                Trimite mesajul
              </button>
            </div>
          </div>
        </form>
        <% } else { %>
        <div class="alert alert-success" role="alert">
          Mulțumim pentru mesaj! Te vom contacta cât mai curând posibil.
        </div>
        <% } %>
      </div>
    </section>

    <footer class="bg-dark text-white text-center py-4">
      <div class="container">
        <p class="mb-0">
          &copy; <%= year %> <%= platformName %>. Toate drepturile rezervate.
        </p>
      </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
    <script src="/js/scripts.js"></script>
  </body>
</html>
